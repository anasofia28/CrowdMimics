<section class="container-md d-none" id="gameZone">
    <div class="alert alert-info py-2 rounded-0" role="alert">
        <div class="row justify-content-around">
            <div class="text-center" id="wordDiv"></div>
        </div>
    </div>
    <div class="py-2" role="alert">
        <div class="row text-center justify-content-center">
            <div id="clock_spinner" class="spinner-border text-success" style="width: 4rem; height: 4rem; z-index: 10;"
                role="status">
                <span class="sr-only"></span>
            </div>
            <p class="display-5 fw-bold mb-0" style="z-index: 20; position: absolute;" id="clock">0</p>
        </div>
    </div>
    <div class="row justify-content-center mx-0">
        <div class="col-8 h-100 players"></div>
        <div class="h-100">
            <div class="messages"></div>
            <form id="sendMessage" class="m-2">
                <input class="form-control" type="text" placeholder="Type your guess here...">
                <div class="position-relative">
                    <ul class="list-group mt-1" id="suggestions"></ul>
                </div>
            </form>
        </div>
    </div>
</section>